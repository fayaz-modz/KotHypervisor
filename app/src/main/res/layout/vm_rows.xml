<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"

                                             android:layout_width="match_parent"
                                             android:layout_height="64dp" tools:layout_editor_absoluteY="81dp">

    <TextView
            android:text="Nombre:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nombre_tv" android:textStyle="bold"
            android:textSize="16sp" android:textColor="@android:color/black" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="Estado:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/estado_tv" android:textStyle="bold"
            android:textSize="16sp" android:textColor="@android:color/black" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/nombre_tv"
            android:layout_marginStart="126dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fill_nombre_tv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:textSize="12sp" android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/nombre_tv"
            android:layout_marginStart="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fill_estado_tv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:textSize="16sp" android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/estado_tv" android:layout_marginStart="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fill_cpu_tv"
            android:textSize="16sp" android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/cpu_tv" android:layout_marginStart="10dp"
            android:layout_marginBottom="3dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fill_mem"
            android:textSize="16sp" android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mem_tv" android:layout_marginStart="8dp"/>
    <TextView
            android:text="CPU:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cpu_tv"
            android:textStyle="bold"
            android:textColor="@android:color/black" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="MEM:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mem_tv"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/cpu_tv"
            android:layout_marginStart="156dp"/>
</android.support.constraint.ConstraintLayout>