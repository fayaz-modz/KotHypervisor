<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:orientation="vertical"
                                             android:padding="15dp" tools:layout_editor_absoluteY="81dp">

    <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="Tipo de host" android:id="@+id/host_tview"
            android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="200dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp" app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:id="@+id/et_pass"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:imeOptions="actionDone"
            android:singleLine="true" android:inputType="textPassword"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/et_user" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:hint="Contraseña"/>

    <EditText
            android:id="@+id/et_alias"
            android:layout_width="213dp"
            android:layout_height="45dp"
            android:layout_weight=".7"
            android:imeOptions="actionDone"
            android:singleLine="true" android:inputType="textPassword"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/et_pass" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:hint="Alias"/>
    <EditText
            android:id="@+id/et_user"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:inputType="text"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/et_dir" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:hint="Usuario"/>
    <EditText
            android:id="@+id/et_dir"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:inputType="text"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_host" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:hint="Direccion IP"/>
    <Spinner
            android:id="@+id/spinner_host"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:imeOptions="actionDone"
            android:singleLine="true"
            app:layout_constraintTop_toBottomOf="@+id/host_tview" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Añadir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_hv_button"
            android:background="@drawable/rounded_button" android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/et_alias" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>